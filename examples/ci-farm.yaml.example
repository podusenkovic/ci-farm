# Пример глобальной конфигурации CI Farm
# Скопируйте в ~/.ci-farm.yaml и отредактируйте

slaves:
  # Первый slave - мощный десктоп
  - name: desktop
    host: 192.168.1.10
    user: builder
    port: 22
    key: ~/.ssh/id_rsa
    build_dir: /tmp/ci-farm-builds

  # Второй slave - Raspberry Pi
  - name: raspberry
    host: 192.168.1.20
    user: pi
    port: 22
    key: ~/.ssh/id_rsa
    build_dir: /home/pi/builds

  # Третий slave - сервер в офисе
  - name: office-server
    host: 10.0.0.100
    user: ci
    port: 2222
    key: ~/.ssh/office_key
    build_dir: /var/ci/builds

# Slave по умолчанию (используется если не указан --on)
default_slave: desktop
